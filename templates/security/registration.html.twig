{% extends 'base.html.twig' %}
{% block body %}
<h1>S'Inscrire</h1>
    {{ form_start(formRegister) }}
    {{ form_row(formRegister.email,{'label':'Adresse Email','attr':{'placeholder':"Entrer votre email"}}) }}
    {{ form_row(formRegister.username,{'label':'Nom d\'utilisateur','attr':{'placeholder':"Entrer votre pseudo"}}) }}
    {{ form_row(formRegister.password,{'label':'Mot de passe','attr':{'placeholder':"Entrer votre mot de passe"}}) }}
    {{ form_row(formRegister.confirm_password,{'label':'Confirmation Mot de passe','attr':{'placeholder':"Entrer de nouveau votre mot de passe"}}) }}

    <button type="submit" class="btn btn-success">S'inscrire</button>
    {{ form_end(formRegister) }}
    <a placeholder="Deja inscrit?" type="text" href="{{ path('security_login') }}">Se connecter</a>
{% endblock %}