{% extends 'base.html.twig' %}

{% block title %}Hello!{% endblock %}

{% block body %}
<h1>Résumé compte</h1>

<p>Bonjour {{ user.username }}</p>
<p>Score Personnel</p>
<table class="table table-stripped">
    <thead>
        <tr>
            <td>Jeux</td>
            <td>Difficulté</td>
            <td>Score</td>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Quizz</td>
            <td>Facile</td>
            <td>{{user.scoreFacil}}</td>
        </tr>
    </tbody>
    <tbody>
        <tr>
            <td>Quizz</td>
            <td>Moyen</td>
            <td>{{user.scoreMoyen}}</td>
        </tr>
    </tbody>
    <tbody>
        <tr>
            <td>Quizz</td>
            <td>Difficile</td>
            <td>{{user.scoreDifficil}}</td>
        </tr>
    </tbody>
</table>
<hr>
    <ul>
        <li>
            <p>Modifier le pseudo<span class="sr-only">(current)</span></p>
            <input type="text"  placeholder="Nouveau pseudo">
            <button type="submit" class="btn btn-success">
                Modifier pseudo
            </button>
        </li>
        <li>
            <p>Modifier le mot de passe<span class="sr-only">(current)</span></p>
            <input type="password" name="password" id="inputPassword" placeholder="Nouveau mot de passe">
            <button type="submit" class="btn btn-success">
                Modifier mot de passe
            </button>
        </li>
    </ul>
{% endblock %}
