<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}MEDI-GAMES{% endblock %}</title>
     <link rel="stylesheet" href="https://bootswatch.com/4/flatly/bootstrap.min.css">
    {% block stylesheets %}
    {% endblock %}
</head>
<body>
{% block header%}
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="/">MEDI-GAMES</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarColor02">
        <ul class="navbar-nav mr-auto">

            <li class="nav-item">
                <a class="nav-link" href={{ path('acceuil')}}>JEUX</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">CLASSEMENT</a>
            </li>
            {% if app.user %}
            <li class="nav-item">
                <a class="nav-link" href="{{ path('add_question') }}">Add Question</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('security_account') }}">Mon Compte</a>
            </li>
            {% endif %}
        </ul>
        {% if not app.user %}
        <form class="form-inline my-2 my-lg-0" action="{{ path('security_login') }}">
            <button class="btn btn-secondary my-2 my-sm-0" type="submit">Connexion</button>
        </form>
        {% else %}
        <form class="form-inline my-2 my-lg-0" action="{{ path('security_logout') }}">
            <button class="btn btn-secondary my-2 my-sm-0" type="submit">DÃ©connexion</button>
        </form>
        {% endif %}
    </div>
</nav>
{% endblock %}
<br>

{% block body %}
{% endblock %}

{% block javascripts %}{% endblock %}
</body>
</html>
