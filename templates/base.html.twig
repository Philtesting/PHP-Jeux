<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}MEDI-GAMES{% endblock %}</title>
     <link rel="stylesheet" href="https://bootswatch.com/4/flatly/bootstrap.min.css">
    {% block stylesheets %}
    {% endblock %}
</head>
    <body>
    {% block header%}
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="/">MEDI-GAMES</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor02">
                <ul class="navbar-nav mr-auto">

                    <li class="nav-item">
                        <a class="nav-link" href={{ path('jeux') }} >JEUX</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href={{path('class.index')}}>CLASSEMENT</a>
                    </li>
                    {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link" href={{ path('add_question') }}>Add Question</a>
                    </li>
                    {% endif %}
                    {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('createMedia') }}">Add Media</a>
                    </li>
                    {% endif %}
                    
                </ul>
                {% if not app.user %}
                <form class="form-inline my-2 my-lg-0" action="{{ path('security_login') }}">
                    <button class="btn btn-secondary my-2 my-sm-0" type="submit">Connexion</button>
                </form>
                {% else %}
                    <a class="nav-link"> <em>Bienvenue  </em> <strong>{{ app.user.username }}</strong></a>
                    <ul class="nav nav-pills flex-column">
                        <li class="nav-item dropdown ">
                            <a class="nav-link btn btn-secondary my-2 my-sm-0" data-toggle="dropdown" role="button" href="#" aria-haspopup="true" aria-expanded="false">Mon compte</a>
                            <div class="dropdown-menu " style="position: absolute; transform: translate3d(0px, 38px, 0px); top: 0px; left: 0px; right: 18px; will-change: transform;" x-placement="bottom-start">
                                <a class="dropdown-item" href="{{ path('security_account') }}">Info compte</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#"> Niveau {{app.user.level}}
                                <div class="progress">
                                    <div class="progress-bar progress-bar-striped bg-success progress-bar-animated" role="progressbar" aria-valuenow="{{app.user.level}}" aria-valuemin="0" aria-valuemax="25" style="width:{{app.user.level*4}}%"></div>
                                </div>
                                </a>
                                <div class="dropdown-divider"></div>
                                <form class="form-inline my-2 my-lg-0" action="{{ path('security_logout') }}">
                                    <button class="dropdown-item" type="submit">DÃ©connexion</button>
                                </form>
                            </div>
                        </li>
                    </ul>
                {% endif %}

            </div>
        </nav>
    {% endblock %}
    
    {% block body %}{% endblock %}
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    {% block javascripts %}{% endblock %}

    </body>
</html>